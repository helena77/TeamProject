@* Landing Page for the Game World Tour *@

@{
    @* Using a shared layout for the Game *@
    Layout = "~/Views/Shared/_GameLayout.cshtml";
    @* Game Instruction Page *@
    ViewBag.Title = "Game";
}


@* CSS Stylesheet *@
<style>


    /* Borderless page style */
    hr {
        border: none;
    }


    body {
        background-image: url('/Content/Images/loading page final.png');
        background-repeat: no-repeat;
        background-position: center center;
        background-attachment:fixed;
        background-size: cover;
    }

    /* Container holding the image and the text */
    .container4 {
        position: relative;
        width:100%;
        padding:0;
        margin:0;
    }

    .container4 img {
        width:100%;
        height:auto;
    }

    /* Centered In Bottom Half */
    .bottom {
        position: fixed;
        top: 65%;
        left: 50%;
        transform: translate(-30%, -30%);
    }


    /* Button Settings */
    .button {
        border-radius: 4px;
        background-color: #f77446;
        border: 1px solid white;
        color: white;
        padding: 15px 20px;
        text-align: right;
        text-decoration: none;
        display: inline-block;
        font-family: 'Palatino Linotype';
        font-size: 20px;
        font-weight: bold;
        margin: 4px 2px;
        cursor: pointer;
        /*opacity: 0.8;*/
        -webkit-transition-duration: 0.4s; /* Safari */
        transition-duration: 0.4s;
    }

    /* Button Shadow Settings */
    .button {
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.4), 0 6px 20px 0 rgba(0,0,0,0.3);
    }

    /* Button Shadow Hover Settings */
    .button:hover {
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
    }

    .button a:visited {
        color: white;
    }

</style>



